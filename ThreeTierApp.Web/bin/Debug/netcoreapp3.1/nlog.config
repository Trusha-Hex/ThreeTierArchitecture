<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<!-- File target with log rotation, logging in JSON format -->
		<target name="logfile" xsi:type="File"
				fileName="E:\Trusha\Training\ThreeTierApp\ThreeTierApp.Web\Logs\logfile-${shortdate}.json"
				layout="${jsonlayout:time=${longdate},level=${level},message=${message},logger=${logger},exception=${exception},threadid=${threadid},eventid=${eventid}}" 
				archiveFileName="E:\Trusha\Training\ThreeTierApp\ThreeTierApp.Web\Logs\Archive\logfile-{#}.json"
				archiveNumbering="Rolling"
				archiveEvery="Day"
				maxArchiveFiles="7" />

		<!-- Console target logging in JSON format -->
		<target name="console" xsi:type="Console" layout="${jsonlayout:time=${longdate},level=${level},message=${message},logger=${logger},exception=${exception},threadid=${threadid},eventid=${eventid}}" />
	</targets>
	<rules>
		<!-- Log everything Info level and above -->
		<logger name="*" minlevel="Info" writeTo="logfile,console" />
	</rules>
</nlog>
