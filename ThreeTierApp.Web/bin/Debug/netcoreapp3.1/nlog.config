<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<!-- File target -->
		<target name="logfile" xsi:type="File" fileName="E:\Trusha\Training\ThreeTierApp\ThreeTierApp.Web\Logs\logfile.log" layout="${longdate} ${uppercase:${level}} ${message}" />
		<!-- Console target -->
		<target name="console" xsi:type="Console" layout="${longdate} ${uppercase:${level}} ${message}" />
	</targets>
	<rules>
		<logger name="*" minlevel="Info" writeTo="logfile,console" />
	</rules>
</nlog>
